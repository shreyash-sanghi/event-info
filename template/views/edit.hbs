<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style/style.css">
    <title>Document</title>
</head>

<body>
    {{>navbar}}
    {{#if Err}} 
      <div class="alert alert-danger" role="alert">
       {{Err}}
      </div>
    {{/if}}
    <div class="mancontainer">
        <div class="formbody">
            <div id="formname">
                <h2>New Event</h2>
            </div>
            <div id="manform">
                <form action="/edit/{{_id}}" method="POST">
                    <div class="formcontent">
                        <input type="text" placeholder="Event Name *" id="EventName" name="EventName"
                            value="{{EventName}}">
                        <input type="text" placeholder="Place *" id="place" name="Place" value="{{Place}}">
                    </div>
                    <div>
                        <input type="date" placeholder="Starting Date " id="StartDate" name="StartDate"
                            value="{{StartDate}}">Start Date
                        <input type="date" placeholder="Last Date " id="EndDate" name="EndDate" value="{{EndDate}}">End
                        Date
                    </div>
                    <div class="formcontent">
                        <input type="text" placeholder="Host Name *" id="HostName" name="HostName" value="{{HostName}}">
                        <input type="text" placeholder="Place *" id="HostName" name="Institude" value="{{Institude}}">
                    </div>
                    <div class="formcontent">
                        {{!-- <input type="image" value="Image" value="image" src=" " alt="Host image" width="48"
                            height="48"> --}}
                        {{!-- <input type="image" placeholder="Host Image" id="hostImage" value="Image" value="Image">
                        --}}
                    </div>
                    <input type="submit" value="Add" class="register">
                </form>
            </div>
        </div>

    </div>
      <script src="js/script2.js"></script>
    <script>
         document.getElementById("home").style.display = "none"
        document.querySelector(".events").style.display = "none"
        document.querySelector(".login").style.display = "none"
        const registration = document.querySelector("#registration");
        registration.style.display = 'none';</script>
</body>

</html>