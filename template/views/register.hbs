<!DOCTYPE html>
<html lang="en">
<head>
{{>header}}
 
    <title>Form</title>
</head>
<body>
    {{>navbar}}
    {{#if Err}} 
      <div class="alert alert-danger" role="alert">
       {{Err}}
      </div>
    {{/if}}
    <div class="mancontainer">
        <div class="formbody">
            <div id="switch">
                <a href="/register" class="registration">Registration</a>                
                <a href="/login" class="login">Login</a>                
            </div>
            <div id="formname">
                <h3>EMPLOY REGISTRATION FORM</h3>
            </div>
            <div id="manform">
                <form action="/register" method="POST" >
                    <div class="formcontent">
                    <input type="text" placeholder="First Name *" id="firstname" name="firstname" value="">
                    <input type="text" placeholder="Last Name *" id="lastname" name="lastname" value="">
                  </div>
                  <div class="ratiocontent">
             
                    <input id="formEmail" type="email" placeholder="Your Email *" id="email" name="email">
                    <div>
                    <input type="radio" value="male" class="gender" name="gender"> Male
                    <input type="radio" value="female" class="gender" name="gender">Female
                    </div>
                </div>

                <div class="formcontent">
                    <input type="number" placeholder="Your Phone *" id="number" name="number" value="">
                    <input type="text" placeholder="Age *" id="age" name="age" value="">
                </div>
                <div class="formcontent">
                    <input type="password" placeholder="Strong Password *" id="password" name="password" value="" >
                    <input type="password" placeholder="Conform Password *" id="cpassword" name="cpassword" value="" >
                </div>
                <input type="submit" value="Register" class="register">
                </form>
            </div>
        </div>

    </div>

 <script src="js/script.js"></script>
 <script>document.querySelector('.Page').style.display="none";</script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</body>
</html>